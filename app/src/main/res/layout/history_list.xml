<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/hsll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/paymentDateTextView"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp"
            android:text="29 Februyari, 2018" />
        <TextView
            android:id="@+id/paymentInputTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp"
            android:text="jubayertalha194@yahoo.com" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/paymentMethodTextView"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:paddingRight="5dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"
                android:text="Flexiload" />
            <TextView
                android:id="@+id/paymentAmountTextView"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:paddingRight="5dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"
                android:text="120 Taka" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/paymentRoyalTextView"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:paddingRight="5dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"
                android:text="2222 Royal" />

            <TextView
                android:id="@+id/paymentProofTextView"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:paddingRight="5dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"
                android:text="Paid" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>